<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.cuncisboss.simplehabittracker.model.User" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.dashboard.DashboardFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_superhero"
                android:contentDescription="@string/iconuser"
                android:layout_margin="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_user_detail"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:layout_marginTop="8dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.name}"
                    tools:text="Cuncis"
                    style="@style/TextViewDescription" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.jobTitle}"
                    tools:text="Expert"
                    style="@style/TextViewDescription" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(user.level)}"
                    tools:text="Level 10"
                    style="@style/TextViewDescription" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(user.gold)}"
                    tools:text="9999"
                    style="@style/TextViewGold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Exp ` + String.valueOf(user.exp)}"
                    tools:text="Exp 0"
                    style="@style/TextViewDescription" />

                <!--        <ProgressBar-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:indeterminate="true"-->
                <!--            android:visibility="visible"/>-->
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/btn_createUser"
            android:text="@string/add_new_user"
            android:background="@color/colorScrim"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="22sp"
            android:fontFamily="@font/galdeano"/>

    </RelativeLayout>
</layout>